@page
@model CabinetStomatologic.Pages.Doctori.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Doctor.ID" />
            <div class="form-group">
                <label asp-for="Doctor.Titulatura" class="control-label"></label>
                <input asp-for="Doctor.Titulatura" class="form-control" />
                <span asp-validation-for="Doctor.Titulatura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Nume" class="control-label"></label>
                <input asp-for="Doctor.Nume" class="form-control" />
                <span asp-validation-for="Doctor.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Prenume" class="control-label"></label>
                <input asp-for="Doctor.Prenume" class="form-control" />
                <span asp-validation-for="Doctor.Prenume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.TelefonMobil" class="control-label"></label>
                <input asp-for="Doctor.TelefonMobil" class="form-control" />
                <span asp-validation-for="Doctor.TelefonMobil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Email" class="control-label"></label>
                <input asp-for="Doctor.Email" class="form-control" />
                <span asp-validation-for="Doctor.Email" class="text-danger"></span>
            </div>
                <div class="form-group">
	                <div class="table">
	                    <table>
	                        <tr>
	                        @{
			int cnt = 0;
			foreach (var cat in Model.AssignedSpecializariDataList)
			{
				if (cnt++ % 3 == 0)
				{
					@:</tr><tr>
				}
	        	@:<td>
	        <input type="checkbox" name="selectedCategories"
		    value="@cat.SpecializareID"
		    @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
		    @cat.SpecializareID @: @cat.Name
		        @:</td>
	    	}
        	@:</tr>
	        }
	            </table>
	        </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
                                    
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
